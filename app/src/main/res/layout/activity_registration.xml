<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.goldvaultmarket.com.goldvaultmarket.Registration">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardview_default_radius"
            android:layout_marginTop="@dimen/cardview_default_radius"
            android:text="Menzebanc"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cardview_default_elevation"
            android:text="Gold Vault Market"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"

      android:orientation="vertical">
      <EditText
          android:id="@+id/scratchCardNumber"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/cardview_default_elevation"
          android:ems="10"
          android:hint="Scratch Card Number"
          android:inputType="textPersonName"
          android:singleLine="true" />

      <EditText
          android:id="@+id/scratchCardPassword"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/cardview_default_radius"
          android:layout_marginTop="@dimen/cardview_default_elevation"
          android:ems="10"
          android:hint="Scratch Card Password"
          android:inputType="textPassword" />

      <Button
          android:id="@+id/continueRegistration"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/cardview_default_elevation"
          android:background="@color/blue"
          android:text="Continue"
          android:textColor="@color/cardview_light_background" />

  </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="vertical">
  </LinearLayout>

</LinearLayout>
